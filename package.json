{
  "name": "meal-planner-demo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.24.0",
  "scripts": {
    "build": "pnpm --filter @meal-planner-demo/web build",
    "check": "pnpm --filter @meal-planner-demo/web check",
    "db:generate": "pnpm --filter @meal-planner-demo/web db:generate",
    "db:migrate": "pnpm --filter @meal-planner-demo/web db:migrate",
    "db:push": "pnpm --filter @meal-planner-demo/web db:push",
    "db:seed": "pnpm --filter @meal-planner-demo/web db:seed",
    "db:studio": "pnpm --filter @meal-planner-demo/web db:studio",
    "dev": "pnpm --filter @meal-planner-demo/web dev",
    "docker:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker compose -f docker-compose.yml -f docker-compose.dev.yml down",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx,yml,yaml}\" --cache --ignore-path .gitignore --ignore-path .prettierignore",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx,yml,yaml}\" --cache --ignore-path .gitignore --ignore-path .prettierignore",
    "lint": "pnpm --filter @meal-planner-demo/web lint",
    "lint:fix": "pnpm --filter @meal-planner-demo/web lint:fix",
    "precommit": "pnpm format:write && pnpm lint:fix && pnpm typecheck",
    "preview": "pnpm --filter @meal-planner-demo/web preview",
    "start": "pnpm --filter @meal-planner-demo/web start",
    "test": "pnpm --filter @meal-planner-demo/web test",
    "test:watch": "pnpm --filter @meal-planner-demo/web test:watch",
    "test:ui": "pnpm --filter @meal-planner-demo/web test:ui",
    "test:coverage": "pnpm --filter @meal-planner-demo/web test:coverage",
    "typecheck": "pnpm --filter @meal-planner-demo/web typecheck",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write --ignore-unknown",
      "pnpm exec eslint --config apps/web/eslint.config.js --fix"
    ],
    "*.{js,jsx,json,md,mdx,yml,yaml}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.5.3"
  },
  "pnpm": {
    "overrides": {
      "vite@>=7.1.0 <=7.1.10": ">=7.1.11",
      "glob": "10.5.0",
      "tar": "7.5.2",
      "js-yaml": "4.1.1"
    }
  }
}
